{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('js/reset_password.js') }}"></script>

{% endblock %}

{% block head %}
    <title>Reset Password</title>
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container d-flex justify-content-center align-items-center" style="height:  100vh;">
        <div class="col-6">
            <h1>Reset Password</h1>
            <form id="reset-password-form">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="token">Your token from email</label>
                    <input type="text" id="token" name="token" class="form-control" placeholder="Token" required>
                </div>
                <div class="form-group">
                    <label for="password">New Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password"
                           required>
                </div>
                <div class="form-group">
                    <label for="newPassword">Repeat Password</label>
                    <label for="newPassword"></label><input type="password" id="newPassword" name="newPassword"
                                                            class="form-control" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-outline-primary">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}
